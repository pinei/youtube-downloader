{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "author": "Hashim Mansoor",
  "version": "12.9.9",

  "default_locale": "en",

  "icons": {
    "48": "img/icon_48.png",
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  },

  "background": {
    "scripts": [
      "Content/mono.js",
	  "Content/background.js",
      "Content/utils.js",
      "Content/youtube_com_embed.js",
      "Content/Youtube_app.js",
      "Content/bookmark.js"
    ],
    "persistent": true
  },

  "permissions": ["webRequest","webRequestBlocking","tabs","storage","http://*/*","https://*/*","notifications","bookmarks"],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "options_page":"Content/updates.html",
  "homepage_url":"http://addoncrop.com/youtube_video_downloader",

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["Content/mono.js",
	  "Content/components.js",
	  "Content/youtube_com.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["Content/jquery.js","Content/script.js"],
      "run_at": "document_end"
    },
	{
"matches" : [ "http://*/*", "https://*/*" ],
"js" : [ "Content/http_extend.js" ],
"run_at" : "document_idle",
"all_frames" : false
} 
  ]
}